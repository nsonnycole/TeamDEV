{% block body %}
<!-- MAIN IMAGE SECTION -->
<div id="headerwrap">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <h1>TeamDEV</h1>
        <h2>Travaillez à plusieur  pour un meilleur résultat</h2>
        <div class="spacer"></div>
        <i class="fa fa-angle-down"></i>
